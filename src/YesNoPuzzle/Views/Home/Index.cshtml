@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model ICollection<Game>

@{
    @if (User.Identity.IsAuthenticated)
    {
        <h1>Games: @Model.Count</h1>
        foreach (var g in Model)
        {
            <div style="display: inline">
                <form asp-controller="Home" asp-action="deleteGame" method="post" display="inline">
                    <h4><a href="/Home/Game/@g.Id">@g.GameName</a></h4>
                    <a href="/Home/DeleteGame/@g.Id" class="btn btn-danger" role="button">Delete</a>
                </form>
            </div>
        }
    }
    else
    {
        <h1>Games: @Model.Count</h1>
        foreach (var g in Model)
        {
            <h4><a href="/Home/Game/@g.Id">@g.GameName</a></h4>
        }
    }

}
